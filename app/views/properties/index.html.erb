<html>
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<div class="gigante">

<div class="menu-content"> 
            <h1 class="logo">TABAS</h1> 
            <nav class="header-menu"></nav> <!-- nav :Barra de navegaçao paera fazer menu -->
            <ul class="list-itens"> <!-- É uma lista não ordenada -->
                <li><%= link_to 'HOME', '/home', class:"search" %></li>
                <li><a href="#">SING UP</a></li>
                <li><a href="#">LOG IN</a></li>
            </ul>
        </div>
<h1 class="title">| AVAILABLE PROPERTIES |</h1>
<table>
  <tfoot>
  <tr>
<td colspan="3">
<%= link_to 'New Property', new_property_path %>
</td>
</tr>
</tfoot>
<tbody>
  <% @properties.each do |property| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="image">
        <%= image_tag(property.image1, class: 'list_image') %>
        <%= image_tag(property.image2, class: 'list_image') %>
        <%= image_tag(property.image3, class: 'list_image') %>
        </td>
          <td class="description">
            <h1><%= property.name %></h1>
          </td>
          <td class="actions">
          <ul>
          <li><a>Learn More</a></li>
          </ul>
          </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</html>

<style> 

*{
  padding: 0;
  margin: 0;
  }

.menu-content{
    text-transform: uppercase; /*Deixa todas as letras maiusculas*/
    display: flex; /*Logo de um lado e menu do outro*/
    justify-content: space-around; 
    align-items: center;
    font-size: 1.8rem;
    height: 60px;
    animation: movemenu 2.5s; 
}

@keyframes movemenu {
    0% {
        transform: translateX(32rem) rotateY(-15deg);
    }
    100% {
        transform: translateY(0) rotateY(0);
    }
    }

.logo{
    font-size: 1.8rem;
    letter-spacing: 0.4rem; 
    cursor: pointer;
    font-family: sans-serif;
}
.menu-content .list-itens{
    display: flex;  
    list-style: none;  
  }

.menu-content .list-itens a{
    text-decoration: none; 
    color: black;
    padding: 5px;
    transition: 2ms ease-in;
    position: relative;
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    font-size: 18px;
  }
.menu-content .list-itens a:before { 
  content: ' '; 
  position: absolute; 
  bottom: 0; 
  left: 0;
  width: 0px; 
  border-radius: 40px;
  height: 3px; 
  background-color:rgb(3, 238, 255);
  transition: all 0.5s ease;
  }
.menu-content .list-itens a:hover:before {
    width: 100%;
  }

html {
  background-image: url(<%= asset_path 'back.jpg' %>)
  }
</style>